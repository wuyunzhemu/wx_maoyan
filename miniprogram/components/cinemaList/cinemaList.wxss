/* components/cinemaList/cinemaList.wxss */
.cinema-item{
  padding:30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.cinema-item:active{
  background-color: #f0f0f0
}

.cinema-title{
}
.cinema-name{
  font-size: 33rpx;
  display: inline-block;
  max-width: 500rpx;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis; 
}

.cinema-price{
  font-size: 32rpx;
  display: inline-block;
  margin-left:25rpx;
  color:#ef4238;
}

.price-des{
  font-size: 24rpx;
  color:#ef4238;
}
.cinema-address{
  margin-top: 15rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.cinema-addr{
  width:600rpx;
  font-size: 24rpx;
  color:#666666;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis; 
}

.cinema-dist{
  display: inline-block;
  font-size: 24rpx;
  color:#a5a5a5;
}

.cinema-icons{
  margin-top:20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}


.cinema-act-tag{
  margin-bottom:15rpx
}

