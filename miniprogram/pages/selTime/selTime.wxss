/* miniprogram/pages/selTime/selTime.wxss */
.header__cnmtitle{
  padding-right:18rpx;
  padding-left:30rpx;
  display: flex;
  height:130rpx;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  border-bottom:1rpx solid #f0f0f0;
  background: white;
  
}

.cnmtitle-info{
  display: inline-block;
  width:600rpx;
}
.cnmtitle-info text{
  display: block;
  text-overflow: hidden;
}

.cinema-nm{
  font-size: 32rpx;
}

.cinema-addr{
  font-size: 24rpx;
  color:#9b9b9b;
}

.headertitle__map{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width:60rpx;
  border-left:1rpx solid #e5e5e5;
  padding-left:26rpx;
  height:50rpx;
}

.headertitle__map image{
  padding-left:4rpx;
  width:38rpx;
  height:38rpx;
  overflow: visible;
  
}

.headertitle__map text{
  margin-top:12rpx;
  display: block;
  font-size:24rpx;
  color:#ababab;
}

.post-item{
  width:160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow: unset;
}

.post-item image{
  height:225rpx;
  width:165rpx;
  
  box-sizing: border-box;
}

.swiper-bg{
  position:absolute;
  width:120%;
  height:100%;
  padding-left:200rpx;
  overflow: hidden;
  top:-200rpx;
  z-index: -999;
  filter: blur(30rpx) brightness(0.6);
  left:-200rpx;
}

.select{
transform: scale(1.15);
border:1rpx solid white;
transition:all .2s ease-in 0s;
}

.movie-swiper{
  overflow: hidden;
  height:320rpx;
}

.film-info{
  height:800rpx;
  width:100%;
  background: white;
  position: relative;
}

.film-info:before{
  position: absolute;
  display: inline-block;
	border-top: 13rpx solid transparent;
	border-right: 13rpx solid transparent;
	border-bottom: 13rpx solid white;
  border-left:13rpx solid transparent;
	left: 375rpx;
	top: -24rpx;
	content: '';
}

.film-desc{
  width:100%;
  height:120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom:1rpx solid #dcdcdc
}


.film-desc-title{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  width:100%;
  height:50%;
}



.film-nm{
  font-size: 34rpx;
}

.film-sc{
  margin-left:10rpx;
  font-weight: 350;
  font-size: 32rpx;
}

.film-sc,.film-sc-span{
  color:#ffc335;
}

.film-sc-span{
  font-size: 26rpx;
}

.film-desc-detail{
  display: flex;
  flex-direction: column;
  height:50%;
  justify-content: center;
  align-items: center;
}

.film-detail{
  color:#999999;
  font-size:24rpx;
}

.film-time-list{
  padding-left:30rpx;
  border-bottom:1rpx solid #d8d8d8;
  box-sizing:border-box;
}

.film-item{
  box-sizing:border-box;
  height:120rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  border-bottom:1rpx solid #d8d8d8;
}

.tict{
  display: flex;
  flex-direction: column;
  justify-content: center;
  vertical-align: sub;
  height:120rpx;
}

.tict span{
  display: inline-block;
}

.price-unit{
  font-size: 26rpx; 
}

.film-price{
  color:#ef4238;
  
  font-weight: 330;
}

.film-type{
  font-size: 26rpx;
}

.film-room{
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis; 

}

.ps{
  font-size: 22rpx;
  color:#9a9a9a;
}

.item-time{
  width:120rpx;
 text-align: center;
 margin-right:50rpx;
 font-weight: 330;
}
.item-room{
  width:200rpx;
  margin-right:40rpx;
}
.item-price{
  margin-right:20rpx;
  width:200rpx;
}
.item-btn{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  margin-right:30rpx;
}
