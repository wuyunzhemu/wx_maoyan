.header{

  padding-left:35rpx;
  padding-right: 35rpx;
  border-bottom: 1rpx solid #dddddd;
}

.hd-info{
   display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  height:120rpx;
  border-bottom:1rpx solid #dddddd;
}

.hd-timeInfo{
  font-size: 24rpx;
  color:#9b9b9b;
}

.hd-reminders{
  height:90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  
}

.hd-reminder image{
  height:35rpx;
  width:35rpx;
  vertical-align: middle;
}

.hd-reminder{
  margin-right:40rpx;
}

.hd-reminder text{
  font-size: 26rpx;
  margin-left:10rpx;
}

.seats-scroll{
  height:850rpx;
  overflow: scroll;
}

.bd-seatlist{
  height: 1500rpx;
  width:1500rpx;
  background:#f0f0f0
}

::-webkit-scrollbar {
    display: none;
}

.bd-seatlist{
  width:1500rpx;
  height:2000rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.bd-seats{
  height:60rpx;
}

.bd-seats image{
  margin-right: 10rpx;
  margin-top:15rpx;
  height:45rpx;
  width:45rpx;
  display: inline-block;
}


.seats-room{
  position: relative;
  display: inline-block;
  color: black;
  font-size: 20rpx;
  text-align: center;
  width:330rpx;
}
.seats-room::before{
 content: ''; /*用伪元素来生成一个矩形*/
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: -1;
    background: #dcdcdc;
    transform: scaleY(1.3) perspective(20rpx) rotateX(-5deg);
    transform-origin: bottom;
  }