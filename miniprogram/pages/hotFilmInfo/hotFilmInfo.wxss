/* miniprogram/pages/hotFilmInfo/hotFilmInfo.wxss */
.hidden{
  display: none!important;
}

page,.container{
  width: 100%;
  height:100%;
  background: #f5f5f5
}
.filmInfo__header{

  width:100%;
  height:445rpx;
}

.filmInfo__header_bg{
  filter: blur(30rpx);
  width: 105%;
  height:105%;
  overflow: hidden;
}

.filmInfo__header_items{
  padding-top:20rpx;
  padding-left: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  position: absolute;
  top:0rpx;
  height:34%;
  width:100%;
}

.filmInfo__header_bgImg{
  height: 120%;
  width: 120%;
}

.filmInfo__header_items image{
  box-sizing: border-box;
  border:1px solid #949194;
  display: block;
  width:30%;
  height:75%;
}

.filmInfo__header_desc{
  margin-left:35rpx;
  display: flex;
  flex-direction: column;

}

.filmInfo__header_desc text{
  display: block;
  color:white;
}

.filmInfo__body{
  position: relative;
  width:100%;
  height:100%;
}

.filmInfo_name
{
  font-size: 40rpx;
}

.filmInfo_enm{
  font-size: 24rpx;
}

.filmInfo__wish{
  color:#ffc600!important;
  height:40rpx;
  font-size: 36rpx;
  margin-top:10rpx;
  margin-bottom: 10rpx;
}

.filmInfo_desc-detail text{
  margin-top:8rpx;
  font-size: 30rpx;
  color:#b8bcc0
}

.filmInfo__header-btn{
  padding-left: 10rpx;
  display: flex;
  flex-direction: row;
}

.header-btn{
  margin-left: 25rpx;
  position: relative;
  bottom: 100rpx;
  width:45%;
  height:55rpx;
  color:#f9f9f9;
  text-align: center;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 6rpx;
  font-size: 28rpx;
  line-height: 55rpx;
  border:1px solid #7a7b7e
}

.header-btn image{
  position: relative;
  top:5rpx;
  right:5rpx;
  width:30rpx;
  height:30rpx;
}

.filmInfo__intr{
  width:100%;
  height:auto;
  background: #fff;
  padding-top:30rpx;
}

.filmInfo__intr-text{
  background: #fff;
  margin-left:30rpx;
  margin-right: 30rpx;
  display: -webkit-box;
  font-size: 28rpx;
  word-break: break-all;
  line-height: 50rpx;
  overflow: hidden;
  -webkit-line-clamp:3;
  text-overflow:ellipsis;
  -webkit-box-orient: vertical;
  letter-spacing: 2rpx;
}

.filmInfo__intr-arrow{
  width:750rpx;
  background: #fff;
  text-align: center;
  height:60rpx;
  border-bottom: 1px solid #d8d8d8
}

.filmInfo__intr-arrow image{
  width:25rpx;
  height:25rpx
}

.show{
  display: block;
}

.filmInfo__act{
  padding-left: 30rpx;
  margin-top:23rpx;
  width:100%;
  height:350rpx;
  background: #fff;
  border-top:1px solid #d8d8d8;
   border-bottom:1px solid #d8d8d8;
}

.filmInfo__act-title{
  font-size: 28rpx;
  height:78rpx;
  line-height: 78rpx;
}

.filmInfo__act-scroll{
  width:690rpx;
}

.filmInfo__act-actInfo
{
  height:100%;
  width:100%;
  display: flex;
  flex-direction: row;
}

.actInfo{
  margin-right: 20rpx;
  width:140rpx;
  display: flex;
  flex-direction: column;
}

.actInfo image{
  width:140rpx;
  height:182rpx;
}

.actInfo text{
  display: block;
  text-align: center;
  -webkit-line-clamp:1;
  height:35rpx;
  line-height: 35rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.actInfo-name{
  margin-top:15rpx;
  font-size: 25rpx;
}

.actInfo-role{
  font-size: 22rpx;
  color:#999999;
}