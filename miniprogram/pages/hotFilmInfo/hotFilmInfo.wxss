/* miniprogram/pages/hotFilmInfo/hotFilmInfo.wxss */
.hidden{
  display: none!important;
}

page,.container{
  width: 100%;
  height:100%;

}
.filmInfo__header{

  width:100%;
  height:445rpx;
}

.filmInfo__header_bg{
  filter: blur(30rpx) brightness(0.6);
  width: 130%;
  height:130%;
  overflow: hidden;
}

.filmInfo__header_items{
  padding-top:20rpx;
  padding-left: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  position: absolute;
  top:0rpx;
  width: 100%;
  height:34%;
}

.filmInfo__header_bgImg{
  height: 120%;
  width: 120%;
}

.filmInfo__header_items image{
  border:1px solid #949194;
  display: block;
  width:223rpx;
  height:75%;
}

.filmInfo__header_desc{
  margin-left:35rpx;
  display: flex;
  flex-direction: column;

}

.filmInfo__header_desc text{
  display: block;
  color:white;
}

.filmInfo__body{
  position: relative;
  width:100%;
  background-color: white;
  height:100%;
}

.filmInfo_name
{
  font-size: 40rpx;
}

.filmInfo_enm{
  font-size: 24rpx;
}

.filmInfo__wish{
  color:#ffc600!important;
  height:40rpx;
  font-size: 36rpx;
  margin-top:10rpx;
  margin-bottom: 10rpx;
}

.filmInfo_desc-detail text{
  margin-top:8rpx;
  font-size: 30rpx;
  color:#b8bcc0
}