/* miniprogram/pages/movie/movie.wxss */
.data_getMore{
  height:60rpx;
  font-size: 26rpx;
  text-align: center;
  padding-top:20rpx;
  color:#aaa;
  background-color:#f8f8f8;
}
.data_getMore:active{
  background-color:#f0f0f0;
}
.hidden{
  display: none !important;
}

.subnav{
  background: #f5f5f5;
  display: flex;
  height:80rpx;
  width:750rpx;
  border-bottom: 1px solid #f0f0f0;
  line-height: 90rpx;
  font-size:28rpx;
  flex-direction: row;
  justify-content: flex-start;
  color:#666666;
  align-items: center;
}

.header-search{
  margin-left:20rpx;
  margin-right:30rpx;
  border-radius: 8rpx;
  border:1rpx solid #e6e6e6;
  color:#bbbbbb;
  display: inline-block;
  background: white;
  height:50rpx;
  line-height: 50rpx;
  flex:1;
  text-align:center;
}

.header-search text{
  vertical-align: super;
  font-size:24rpx;
}

.header-search image{
  margin-top:10rpx;
  height:35rpx;
  width:35rpx;
}